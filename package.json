{
  "name": "tunic",
  "version": "0.4.0",
  "description": "A doc-block tag parser.",
  "keywords": [
    "toga",
    "tunic",
    "parser",
    "documentation",
    "docblock",
    "docs",
    "doc"
  ],
  "homepage": "https://github.com/togajs/tunic",
  "bugs": "https://github.com/togajs/tunic/issues",
  "license": "MIT",
  "author": "Shannon Moeller <me@shannonmoeller.com> (http://shannonmoeller.com)",
  "main": "dist/tunic.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/togajs/tunic"
  },
  "dependencies": {
    "mout": "^0.11.0",
    "mtil": "^0.1.3"
  },
  "devDependencies": {
    "babel": "^5.8.19",
    "babel-eslint": "^4.0.5",
    "coveralls": "^2.11.3",
    "eslint": "^0.24.1",
    "expect": "^1.8.0",
    "isparta": "^3.0.3",
    "mocha": "^2.2.5",
    "nodemon": "^1.4.0",
    "stream-array": "^1.1.0",
    "toga": "^0.5.1",
    "vinyl-fs": "^1.0.0"
  },
  "scripts": {
    "all": "npm run lint && npm run test && npm run build",
    "build": "babel src --out-dir dist",
    "coveralls": "cat coverage/lcov.info | coveralls",
    "lint": "eslint src/*.js test/*.js",
    "test": "babel-node node_modules/.bin/isparta cover --report text --report lcov --include 'src/*.js' node_modules/.bin/_mocha -- 'test/*.js'",
    "watch": "nodemon --exec 'npm run test' --watch src --watch test"
  }
}
