{
  "name": "tunic",
  "version": "2.0.0",
  "description": "A documentation-block parser.",
  "main": "dist/tunic.js",
  "scripts": {
    "build": "babel src --out-dir dist",
    "coverage": "nyc report -r text-lcov | coveralls",
    "test": "xo && nyc ava --verbose",
    "watch": "chokidar '{src,test}/**/*.js' -c 'npm test'",
    "watch2": "chokidar '{src,test}2/**/*.js' -c 'npm test test2'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/togajs/tunic"
  },
  "keywords": [
    "tunic",
    "parser",
    "documentation",
    "docblock",
    "docs",
    "doc"
  ],
  "author": "Shannon Moeller <me@shannonmoeller.com> (http://shannonmoeller.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/togajs/tunic/issues"
  },
  "homepage": "https://github.com/togajs/tunic",
  "dependencies": {
    "regx": "^1.0.4"
  },
  "devDependencies": {
    "ava": "^0.12.0",
    "babel-cli": "^6.5.1",
    "babel-polyfill": "^6.5.0",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.5.2",
    "chokidar-cli": "^1.2.0",
    "coveralls": "^2.11.6",
    "nyc": "^5.6.0",
    "xo": "^0.12.1"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "nyc": {
    "require": [
      "babel-register",
      "babel-polyfill"
    ]
  },
  "xo": {
    "esnext": true
  }
}
