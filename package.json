{
  "name": "tunic",
  "version": "0.3.0",
  "description": "A doc-block tag parser.",
  "keywords": [
    "toga",
    "tunic",
    "parser",
    "documentation",
    "docblock",
    "docs",
    "doc"
  ],
  "homepage": "https://github.com/togajs/tunic",
  "bugs": "https://github.com/togajs/tunic/issues",
  "license": "MIT",
  "author": "Shannon Moeller <me@shannonmoeller.com> (http://shannonmoeller.com)",
  "main": "dist/tunic.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/togajs/tunic"
  },
  "dependencies": {
    "mtil": "^0.1.3"
  },
  "devDependencies": {
    "babel": "^5.2.17",
    "coveralls": "^2.11.2",
    "eslint": "^0.20.0",
    "expect": "^1.6.0",
    "isparta": "^3.0.3",
    "mocha": "^2.2.4",
    "nodemon": "^1.3.7",
    "stream-array": "^1.1.0",
    "vinyl-fs": "^1.0.0"
  },
  "scripts": {
    "all": "npm run lint && npm run test && npm run build",
    "build": "babel src --out-dir dist",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "lint": "eslint src/*.js test/*.js",
    "test": "babel-node ./node_modules/.bin/isparta cover --include src/*.js ./node_modules/.bin/_mocha -- test/*.js",
    "watch": "nodemon --exec 'npm run test' --watch src --watch test"
  }
}
